generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 전화번호 인증으로 본인인증
model user {
  no            Int        @id @default(autoincrement())
  id            String     @unique
  pw            String
  name          String?
  phone         String?
  team          team[]
  joinTeam      joinTeam[]
  masterCount   Int
  payment       String?
  clearTodo     clearTodo[]
  jointodo      joinTodo[]
}

model team {
  no       Int        @id @default(autoincrement())
  master   String
  user     user       @relation(fields: [master], references: [id])
  name     String
  code     String     @unique
  joinTeam joinTeam[]
  todo     todo[]
}

model joinTeam {
  no        Int    @id @default(autoincrement())
  userId    String
  user      user   @relation(fields: [userId], references: [id])
  team_code String @map("teamCode")
  team      team   @relation(fields: [team_code], references: [code])
}

model todo {
  todocode    String      @id
  title       String
  teamcode    String
  team        team        @relation(fields: [teamcode], references: [code])
  date        DateTime
  clearTodo   clearTodo[]
  joinTodo    joinTodo[]
}

model joinTodo {
  todocode    String
  todo        todo        @relation(fields: [todocode], references: [todocode])
  member      String
  user        user        @relation(fields: [member], references: [id])

  @@id([member, todocode])
}

model clearTodo {
  joincode    String      @id
  todocode    String
  todo        todo        @relation(fields: [todocode], references: [todocode])
  userId      String
  user        user        @relation(fields: [userId], references: [id])
}